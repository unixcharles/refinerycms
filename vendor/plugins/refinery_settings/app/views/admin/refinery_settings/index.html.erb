<div id='actions'>
  <ul>
    <li>
      <%= link_to "Create New Setting", new_admin_refinery_setting_url, :class => "add_icon" %>
    </li>
    <li>
      <% if @category.nil? %>
        <%= link_to "<strong>General Settings</strong>", admin_refinery_settings_url, :class => "edit_icon" %>
      <% else %>
        <%= link_to "General Settings", admin_refinery_settings_url, :class => "edit_icon" %>
      <% end %>
    </li>
    <% if @categories.any? %>
      <% @categories.each do |category| %>
        <li>
          <% if category == @category %>
            <%= link_to "<strong>#{category}</strong>", admin_refinery_settings_url(:page => 1, :category => category), :class => "edit_icon" %>
          <% else %>
            <%= link_to category, admin_refinery_settings_url(:page => 1, :category => category), :class => "edit_icon" %>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
<div id='records'>
  <% if @refinery_settings.any? %>
    <%= will_paginate @refinery_settings, :previous_label => '&laquo;', :next_label => '&raquo;' unless searching? %>
    <ul>
      <%= render :partial => 'refinery_setting', :collection => @refinery_settings %>
    </ul>
    <%= will_paginate @refinery_settings, :previous_label => '&laquo;', :next_label => '&raquo;' unless searching? %>
  <% else %>
    <p>
      <% if searching? %>
        Sorry, no results found
      <% else %>
        <strong>
          There are no settings yet.
          Click "Create New Setting" to add your first setting.
        </strong>
      <% end %>
    </p>
  <% end %>
</div>
